{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",          /* INDISPENSABLE pour que ça marche avec ton serveur */
    "moduleResolution": "NodeNext",
    "outDir": "./dist",            /* C'est ici qu'on dit de créer le dossier dist */
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}