{
	"name": "transcendance-node",
	"version": "0.1.0",
	"description": "Node.js + Tailwind CSS frontend for Transcendance",
	"private": true,
	"type": "module",
	"main": "dist/server.js",
	"scripts": {
		"dev": "concurrently \"npm run dev:server\" \"npm run dev:css\"",
		"dev:server": "tsx watch src/server.ts",
		"dev:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/assets/app.css --watch",
		"build": "npm run build:css && npm run build:server",
		"build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/assets/app.css --minify",
		"build:server": "tsc -p tsconfig.json",
		"start": "node dist/server.js",
		"lint": "echo \"No linter configured\""
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^24.10.1",
		"autoprefixer": "^10.4.22",
		"concurrently": "^9.2.1",
		"postcss": "^8.5.6",
		"tailwindcss": "3.4.16",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@babylonjs/core": "^8.39.0",
		"@babylonjs/loaders": "^8.39.0"
	}
}
